<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.RegistrationFragment"
    android:background="@color/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/bg"
        android:padding="8dp"
        android:layout_gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/main_color"
            android:text="Registration"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginVertical="16dp"/>
        <EditText
            android:id="@+id/et_r_business_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/et_bg"
            android:padding="16dp"
            android:hint="Business name"
            android:elevation="4dp"
            android:textSize="16sp"
            android:drawableLeft="@drawable/ic_bag"
            android:drawablePadding="16dp"
            android:layout_marginVertical="8dp"
            android:inputType="textCapWords"/>
        <EditText
            android:id="@+id/et_r_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/et_bg"
            android:padding="16dp"
            android:hint="Email"
            android:elevation="4dp"
            android:textSize="16sp"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="16dp"
            android:layout_marginVertical="8dp"
            android:inputType="textEmailAddress"/>
        <EditText
            android:id="@+id/et_r_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/et_bg"
            android:padding="16dp"
            android:hint="Password"
            android:elevation="4dp"
            android:textSize="16sp"
            android:drawableLeft="@drawable/ic_lock"
            android:drawablePadding="16dp"
            android:layout_marginVertical="8dp"
            android:inputType="textPassword"/>
        <EditText
            android:id="@+id/et_r_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/et_bg"
            android:padding="16dp"
            android:hint="Confirm password"
            android:elevation="4dp"
            android:textSize="16sp"
            android:drawableLeft="@drawable/ic_lock"
            android:drawablePadding="16dp"
            android:layout_marginVertical="8dp"
            android:inputType="textPassword"/>
        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg"
            android:textColor="@color/bg"
            android:text="Register"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="32dp"
            app:backgroundTint="@color/main_color"
            android:elevation="4dp"
            />
        <TextView
            android:id="@+id/tv_already_a_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/fg"
            android:text="Already a user? Login!"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"/>
    </LinearLayout>
</ScrollView>