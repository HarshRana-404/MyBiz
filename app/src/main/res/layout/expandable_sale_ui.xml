<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    app:cardUseCompatPadding="true"
    android:background="@color/off_bg"
    app:cardElevation="4dp"
    android:clickable="true"
    android:id="@+id/cv_expandable_sale">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:background="@color/off_bg">

        <RelativeLayout
            android:id="@+id/rl_expandable_sales_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_sale_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:textColor="@color/main_color"
                android:text="Date"
                android:textSize="20sp"
                android:layout_marginVertical="4dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_toLeftOf="@id/tv_sale_amount"
                />
            <TextView
                android:id="@+id/tv_sale_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/fg"
                android:text="â‚¹ Amount"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginVertical="4dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/iv_expand"
                android:layout_marginRight="16dp"
                />
            <ImageView
                android:id="@+id/iv_expand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_down"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_expanded_sales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_expandable_sales_header"
            android:visibility="gone"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>